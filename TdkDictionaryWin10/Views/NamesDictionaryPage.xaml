            <ComboBox x:Name="ComboBoxSearchType"
				    RelativePanel.Below="SearchAutoSuggestBox" RelativePanel.AlignLeftWithPanel="True"
				    ItemsSource="{Binding MatchTypes}" DisplayMemberPath="Value" 
				    SelectedItem="{Binding MatchType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Width="270"
                    Padding="0,0,0,0"/>

            
            <TextBox x:Name="FilterTextBox" Width="250" MinWidth="250"
				    RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True"
				    Margin="0" Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
				    TextWrapping="Wrap">
                <Interactivity:Interaction.Behaviors>
                    <Behaviors:TextBoxEnterKeyBehavior>
                        <Core:InvokeCommandAction Command="{x:Bind ViewModel.SearchWords}" CommandParameter="{Binding Value}" />
                    </Behaviors:TextBoxEnterKeyBehavior>
                    <Core:EventTriggerBehavior>
                        <Behaviors:FocusAction />
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </TextBox>

            <Button x:Name="SearchButton"  Margin="12,0"
				    RelativePanel.AlignTopWithPanel="True" RelativePanel.RightOf="FilterTextBox"
				    Content="Ara" Command="{x:Bind ViewModel.SearchWords}" CommandParameter="{Binding Value}"
                    Padding="5,0,5,0"/>


            <ComboBox x:Name="ComboBoxSearchType"
				    RelativePanel.Below="FilterTextBox" RelativePanel.AlignLeftWithPanel="True"
				    ItemsSource="{Binding MatchTypes}" DisplayMemberPath="Value" 
				    SelectedItem="{Binding MatchType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
        </RelativePanel>

